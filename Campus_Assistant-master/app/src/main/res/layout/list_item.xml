<?xml version="1.0" encoding="utf-8"?>

<TableLayout android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="textStart">

            <TextView
                android:id="@+id/scheduledArrTextView"
                android:layout_height="wrap_content"
                android:textColor="@color/tw__composer_black"
                android:textStyle="bold"
                android:layout_weight="0.5"
                android:textAlignment="viewStart"
                android:layout_width="0dp" />

            <TextView
                android:id="@+id/destinationTextView"
                android:layout_height="wrap_content"
                android:textColor="@color/tw__composer_black"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/platformTextView"
                android:layout_height="wrap_content"
                android:textColor="@color/tw__composer_black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/expectedDepTextView"
                android:layout_width="0dp"
                android:textColor="@color/TravelInformationColor"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:layout_weight="0.25" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/minsLateTextView"
                android:layout_weight="1"
                android:textColor="@color/TravelInformationColor"
                android:textStyle="bold"
                android:textAlignment="viewStart" />
        </TableRow>

    </TableLayout>

